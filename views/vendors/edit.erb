<!-- vendors/edit.erb -->



<fieldset>
  <legend>Edit Vendor</legend>
  <div class="">
    <div class="padding--4">

      <form class="" action="/vendors" method="get">
        <input class="button" type="submit" name="" value="Cancel">
      </form>
    </div>

    <form class="" action="/vendors/<%= @vendor.id %>" method="post">
      <div class="padding--4">

        <label for="name_input">Name: </label>
        <input id="name_input" type="text" name="name" value="<%= @vendor.name %>" autofocus="autofocus">
      </div>
      <div class="padding--4">


        <input class="button confirm" type="submit" name="update_vendor" value="Save Changes">
      </div>
    </form>


    <div class="">
      <form class="" action="/vendors/<%= @vendor.id %>/delete" method="post">

        <div
          <%="class='padding--4 hidden'" if @transactions_count != 0 %>
          <%= "class='padding--4'" if @transactions_count == 0 %>
          >
          <input class="button warning" type="submit" name="delete_vendor" value="Delete Vendor">
        </div>

      </form>
    </div>
  </div>
</fieldset>


